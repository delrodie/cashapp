<div class="modal-dialog">
    <div class="modal-content">
        {{ form_start(form) }}
        <div class="modal-header modal-colored-header bg-primary text-white" >
            <h4 class="modal-title text-white" id="primary-header-modalLabel" > Formulaire</h4>
            <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
            ></button>
        </div>
        <div class="modal-body">
            <div class="row row-cols-1">
                <div class="col mt-3">{{ form_row(form.categorie) }}</div>
                <div class="col mt-3">{{ form_row(form.libelle) }}</div>
                <div class="col mt-3">{{ form_row(form.codebarre) }}</div>
                <div class="col mt-3">{{ form_row(form.prixVente) }}</div>
            </div>
            {{ form_widget(form) }}
        </div>
        <div class="modal-footer">
            {% if suppression == true %}
                <a href="{{ path('app_main_produit_index') }}" class="btn btn-light">
                    Annuler
                </a>
            {% else %}
                <button class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
            {% endif %}
            <button type="submit" class="btn btn-light-primary text-primary font-medium" id="saveButton" >
                {{ button_label|default('Enregistrer') }}
            </button>

            {{ form_end(form) }}
            {% if suppression == true %}
                {{ include('main/produit/_delete_form.html.twig') }}
            {% endif %}

        </div>
    </div>
</div>


